/*

	华北	1
	东北	2
	华东	3
	中南	4
	西北	5
	西南	6
	港澳台	7

*/
function jumpRegion(region,obj){
	
	
	if(region==1){
			if($("#hideId").val()=='1'){
				$(".hb_video").show();
				$(".db_video").hide();
				$(".hd_video").hide();
				$(".zn_video").hide();
				$(".xb_video").hide();
				$(".xn_video").hide();
				
			}else if($("#hideId").val()=='2'){
				$(".hb_gdzc").show();
				$(".db_gdzc").hide();
				$(".hd_gdzc").hide();
				$(".zn_gdzc").hide();
				$(".xb_gdzc").hide();
				$(".xn_gdzc").hide();
				
			}
		}
		if(region==2){
			if($("#hideId").val()=='1'){
				$(".hb_video").hide();
				$(".db_video").show();
				$(".hd_video").hide();
				$(".zn_video").hide();
				$(".xb_video").hide();
				$(".xn_video").hide();
				
			}else if($("#hideId").val()=='2'){
				$(".hb_gdzc").hide();
				$(".db_gdzc").show();
				$(".hd_gdzc").hide();
				$(".zn_gdzc").hide();
				$(".xb_gdzc").hide();
				$(".xn_gdzc").hide();
				
			}
		}
		if(region==3){
			if($("#hideId").val()=='1'){
				$(".hb_video").hide();
				$(".db_video").hide();
				$(".hd_video").show();
				$(".zn_video").hide();
				$(".xb_video").hide();
				$(".xn_video").hide();
				
			}else if($("#hideId").val()=='2'){
				$(".hb_gdzc").hide();
				$(".db_gdzc").hide();
				$(".hd_gdzc").show();
				$(".zn_gdzc").hide();
				$(".xb_gdzc").hide();
				$(".xn_gdzc").hide();
				
			}
		}
		if(region==4){
			if($("#hideId").val()=='1'){
				$(".hb_video").hide();
				$(".db_video").hide();
				$(".hd_video").hide();
				$(".zn_video").show();
				$(".xb_video").hide();
				$(".xn_video").hide();
				
			}else if($("#hideId").val()=='2'){
				$(".hb_gdzc").hide();
				$(".db_gdzc").hide();
				$(".hd_gdzc").hide();
				$(".zn_gdzc").show();
				$(".xb_gdzc").hide();
				$(".xn_gdzc").hide();
				
			}
		}
		if(region==5){
			if($("#hideId").val()=='1'){
				$(".hb_video").hide();
				$(".db_video").hide();
				$(".hd_video").hide();
				$(".zn_video").hide();
				$(".xb_video").show();
				$(".xn_video").hide();
				
			}else if($("#hideId").val()=='2'){
				$(".hb_gdzc").hide();
				$(".db_gdzc").hide();
				$(".hd_gdzc").hide();
				$(".zn_gdzc").hide();
				$(".xb_gdzc").show();
				$(".xn_gdzc").hide();
				
			}
		}
		if(region==6){
			if($("#hideId").val()=='1'){
				$(".hb_video").hide();
				$(".db_video").hide();
				$(".hd_video").hide();
				$(".zn_video").hide();
				$(".xb_video").hide();
				$(".xn_video").show();
				
			}else if($("#hideId").val()=='2'){
				$(".hb_gdzc").hide();
				$(".db_gdzc").hide();
				$(".hd_gdzc").hide();
				$(".zn_gdzc").hide();
				$(".xb_gdzc").hide();
				$(".xn_gdzc").show();
				
			}
		}
		if(region==7){
			alert("暂无港澳台信息！");
		}
		
}

