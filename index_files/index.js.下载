
$(function () {
	// Slideshow
	$("#slider").responsiveSlides({
		auto: true,
		pager: false,
		nav: true,
		speed: 500,
		timeout:4000,
		pager: true, 
		pauseControls: true,
		namespace: "callbacks"
	});
	
	$(".main").hide();
	$(".main2").hide();
	$(".video").show();
	$("#li1").css("background-color","#f73538");  
	$("#li2").css("background-color",""); 
	$("#li3").css("background-color","");
	
});
function aClick (num) {  
          if(num==1){
		$("#hideId").val("1")
		$(".main").hide();
		$(".main2").hide();
		$(".video").show();
		$("#li1").css("background-color","#f73538");  
		$("#li2").css("background-color",""); 
		$("#li3").css("background-color","");
	  }
	  if(num==2){
		$("#hideId").val("2")
		$(".video").hide();
		$(".main2").hide();
		$(".main").show();
		$("#li2").css("background-color","#f73538"); 
		$("#li1").css("background-color",""); 
		$("#li3").css("background-color","");
          }
	  if(num==3){
		$("#hideId").val("3")
		$(".video").hide();
		$(".main").hide();
		$(".main2").show();
		$("#li3").css("background-color","#f73538"); 
		$("#li1").css("background-color","");
		$("#li2").css("background-color","");  
          }
}



